<%
// Default values
const pageTitle = title || 'InfiniMii - Convert, Share & Download Mii Characters for All Nintendo Systems';
const pageDesc = description || 'Create, convert, and share Mii characters for Wii, 3DS, Wii U, Switch, and more. Download QR codes, browse official Miis, and access the ultimate Mii repository.';
const pageUrl = canonicalUrl || `<%= baseUrl %>${currentPath || '/'}`;
const pageImage = ogImage || '<%= baseUrl %>/og-image.jpg'; // Create a default OG image
const pageType = ogType || 'website';
const siteName = 'InfiniMii';
%>

<!-- Primary Meta Tags -->
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title><%= pageTitle %></title>
<meta name="description" content="<%= pageDesc %>">
<meta name="keywords" content="mii, mii characters, nintendo mii, wii mii, 3ds mii, switch mii, mii qr code, mii converter, tomodachi life, miitomo, mii maker, download mii, official miis, <%= keywords || '' %>">
<meta name="author" content="InfiniMii">
<meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1">

<!-- Canonical URL -->
<link rel="canonical" href="<%= pageUrl %>">

<!-- Open Graph / Facebook -->
<meta property="og:type" content="<%= pageType %>">
<meta property="og:url" content="<%= pageUrl %>">
<meta property="og:title" content="<%= pageTitle %>">
<meta property="og:description" content="<%= pageDesc %>">
<meta property="og:image" content="<%= pageImage %>">
<meta property="og:image:width" content="1200">
<meta property="og:image:height" content="630">
<meta property="og:image:alt" content="<%= pageTitle %>">
<meta property="og:site_name" content="<%= siteName %>">
<meta property="og:locale" content="en_US">

<!-- Twitter Card -->
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:url" content="<%= pageUrl %>">
<meta name="twitter:title" content="<%= pageTitle %>">
<meta name="twitter:description" content="<%= pageDesc %>">
<meta name="twitter:image" content="<%= pageImage %>">
<meta name="twitter:image:alt" content="<%= pageTitle %>">

<!-- Additional SEO Tags -->
<meta name="theme-color" content="#ff0000">
<link rel="icon" type="image/png" href="/favicon.png">
<link rel="apple-touch-icon" href="/apple-touch-icon.png">