<!DOCTYPE html>
<html lang="en">
<head>
    <%
    const pageTitle = 'Search Mii Characters - InfiniMii';
    const pageDesc = 'Search our vast collection of Mii characters for all Nintendo systems. Find official Nintendo Miis, community creations, and celebrity Miis for Wii, 3DS, Wii U, and Switch.';
    const canonicalUrl = 'https://yourdomain.com/search';
    const keywords = 'search mii, find mii character, mii database, mii search engine';
    %>
    <%- include('../ejsPartials/metaTags', { title: pageTitle, description: pageDesc, canonicalUrl, keywords }) %>
    <%- include('../ejsPartials/structuredData') %>
    <%- include('../ejsPartials/faqSchema') %>
    
    <link rel="stylesheet" href="./global.css">
    <link rel="stylesheet" href="utilityPages.css">
</head>
<body>
    <%- partials.header %>
    <%- partials.accountDisplay %>
    
    <main class="content" role="main">
        <%- partials.sidebar %>
        
        <section class="utility-container" aria-labelledby="search-heading">
            <form method="GET" action="/searchResults" role="search">
                <fieldset>
                    <legend id="search-heading">Search Mii Characters</legend>
                    <label for="search-query" class="sr-only">Enter character name or keywords</label>
                    <input 
                        id="search-query"
                        name="q" 
                        placeholder="Search by character name, creator, or description..." 
                        type="search"
                        autocomplete="off"
                        required
                        aria-required="true"> 
                    <input type="submit" value="Search">
                    
                    <div class="search-tips">
                        <h3>Search Tips:</h3>
                        <ul>
                            <li>Search by character name (e.g., "Mario", "Link", "Pikachu")</li>
                            <li>Find official Nintendo Miis by searching for game titles</li>
                            <li>Use creator names to find all Miis by a specific user</li>
                            <li>Browse by console: "Wii", "3DS", "Switch"</li>
                        </ul>
                    </div>
                </fieldset>
            </form>
        </section>
        
        <%- partials.featuredMiis %>
    </main>
    
    <%- partials.footer %>
    <script src="global.js" defer></script>
</body>
</html>